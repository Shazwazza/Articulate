@using Articulate
@using Umbraco.Core
@model Articulate.Models.PostModel
@{
    Layout = "Master.cshtml";
    ViewBag.CssBodyClass = "post-template tag-sublime tag-javascript";
}

@section description{
    <meta name="description" content="@Model.Excerpt" />
}

@Html.ThemedPartial(Model, "Header")
<main>
    
    <article>
        <small class="fecha">
            @Model.PublishedDate.ToString("dddd, dd MMMM, yyyy")
        </small>
        <a class="title" href="@Model.Url">
            <h1 class="titulo-articulo">@Model.Name</h1>
        </a>

        <h2 class="subtitulo-articulo">@Model.Excerpt</h2>
        <div class="texto">
            @if (!Model.PostImageUrl.IsNullOrWhiteSpace())
            {
                var thumbnail = Model.GetCropUrl("postImage", "blogPost");
                if (!thumbnail.IsNullOrWhiteSpace())
                {
                    <img class="thumb" src="@thumbnail" alt="@Model.Name" />
                }
            }
            @Model.Body
        </div>
    </article>

</main>